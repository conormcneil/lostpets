doctype html
html
  head
    title= title
    //- link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css")
    script(src='https://code.jquery.com/jquery-2.2.4.min.js')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header
      a(href="/")
        button Home
      a(href="/pets/all")
        button Find Pets 
      a(href="/admin/users")
        button Users
      a(href="/pets/add/lost")
        button Report Lost Pet
      a(href="/pets/add/found")
        button Report Found Pet 
      if user.id
        p Welcome, #{user.username}
        a(href="/users/signout")
          button Sign Out
      else 
        a(href="/users/signin")
          button Sign In
        a(href="/users/signup")
          button Sign Up
  block content
