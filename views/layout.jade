doctype html
html
  head
    title Finding Fido 
    //- link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css")
    script(src='https://code.jquery.com/jquery-2.2.4.min.js')
    link(href='https://fonts.googleapis.com/css?family=Gloria+Hallelujah', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Raleway:300', rel='stylesheet', type='text/css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    script(src='//cdn.auth0.com/js/lock-9.1.min.js')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
    header 
      h1#title Finding Fido 
      div#signLinks
        if !user
          
          a(href="/users/signin") Sign In
            //- button Sign In
          br
          a(href="/users/signup")
            button Sign Up
        else
          p Welcome, #{user.first_name}
          a(href="/users/signout")
            button Sign Out
    div#buttons 
      div#buttonsInButtons    
        a(href="/")
          button Home
        a(href="/pets/all")
          button Find Pets 
        a(href="/admin/users")
          button Users
        a(href="/pets/add/lost")
          button Report Lost Pet
        a(href="/pets/add/found/initial")
          button Report Found Pet 

  script(src="https://cdn.auth0.com/js/lock-7.min.js")
  script(type="text/javascript").
    var lock = new Auth0Lock('odLWNoZNGYeONIG3KeVCisJcta40sQeQ', 'findingfido.auth0.com');
    function signin() {
      lock.show({
        connections: ['facebook', 'google-oauth2'],
        callbackURL: 'https://findingfido.herokuapp.com/callback',
        responseType: 'code',
        authParams: {
          scope: 'openid email'
        }
      });
    }

  block content

  block footer 
    footer.footer 
      p Copyright Â© 2016 Finding Fido 
