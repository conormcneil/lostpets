doctype html
html
  head
    title= title
    //- link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    script(src='//cdn.auth0.com/js/lock-9.1.min.js')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
    header
      a(href="/")
        button Home
      a(href="/pets/all")
        button Find Pets 
      a(href="/admin/users")
        button Users
      a(href="/pets/add/lost")
        button Report Lost Pet
      a(href="/pets/add/found")
        button Report Found Pet 
      if user.id
        p Welcome, #{user.username}
        a(href="/users/signout")
          button Sign Out
      else 
        a(href="/users/signin")
          button Sign In
        a(href="/users/signup")
          button Sign Up
  block content
