extends ../layout 

block content 
  h1 Found Pets 
  a(href="/pets/all") All Pets 
  p
  a(href="/pets/browselost") Lost Pets
  p
  p Show Me:
    p
    a(href="/pets/browsefound/dogs") Dogs 
    p
    a(href="/pets/browsefound/cats") Cats
    p 
    a(href="/pets/browsefound/other") Other 
  table
    each pet in petsAndUsers  
      tr
        td
          ul
            li= pet.image
            li Name: #{fs.echo(pet.name)}
            li Age: #{pet.age}
            li Location: #{fs.echo(pet.location)}
            li Description: #{fs.echo(pet.description)}
            li Date Found: #{pet.date}
            li User: #{pet.username}
            li Contact Info: #{fs.echo(pet.contact)}
