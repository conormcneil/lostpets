extends ../layout

block content
  h1 Report a Found Pet 
  form(action='add-found-pet', method="post")
    input(type="text" name="name" placeholder="Enter the name of the pet. If not known, say N/A.")
    p 
    input(type="text" name="species" placeholder="Enter the species of the pet")
    p
    input(type="location" name="location" placeholder="Enter the approximate location where the pet currently is.")
    p
    label(for="date") Please add the date the pet was found.
    p
    input(type="date" name="date")
    p
    input(type="number" name="age" placeholder="Enter the age of the pet. (Best guess)")
    p
    input(type="textarea" name="description" placeholder="Please enter any additional information, such as breed, distinguishing features, characteristics, etc.")
    p
    label(for="image") Please add an image of the pet.  
    input(type="file" name="image") 
    p
    input(type="textarea" name="contact" placeholder="Please enter your preferred contact information")
    p
    input(type="submit" value="Report Your Found Pet")
