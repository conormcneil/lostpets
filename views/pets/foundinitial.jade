extends ../layout 

block content 
  script(src='../../../../javascripts/findshelters.js')
  br
  div#foundlink 
    a(href="/pets/add/found") If you're ready to report the pet, just click here!
  h4 Need to locate a humane society to drop off this pet? Enter your zip code below to find the nearest shelters.
  br
  form(action='/pets/add/found/initial' method="post" class="form" id="shelterForm")
    input(type="text" name="zip" id="zip") 
  div#sheltershow
    input(type="button" value="Show Nearest Humane Societies" id="humaneSoc" class="submit")
  div(id="addresses")
      div(id="address1" class="address")
      div(id="address2" class="address")
      div(id="address3" class="address")
  div(id="map")

    style.
      html {
      height: 100%;
      margin: 0;
      padding: 0;
      }
      #map
    script.
      var map;
      function initMap() {
      map = new google.maps.Map(document.getElementById('map'), {
      center: {lat: 40.015, lng: -105.2705},
      zoom: 8
      });
      }
    script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyDKlEoatQMCNbV8_y7_i-8oR_Ven7dFMTM&callback=initMap', async='', defer='')
    p
