extends ../layout

block content
  h1 All Pets (Lost and Found)
  p
  a(href="/pets/browselost") Lost Pets 
  a(href="/pets/browsefound") Found Pets 
  p
  table
    each pet in petsAndUsers 
      tr
        td
          ul
            li= pet.image
            //- li Name: #{fs.echo(pet.name)}
            li Name: #{pet.name}
            li Age: #{pet.age}
            if pet.isFound
              //- li Location: #{fs.echo(pet.location)}
              li Location: #{pet.location}a
            else 
              //- li Last Known Location: #{fs.echo(pet.location)}
              li Last Known Location: #{pet.location}
            //- li Description: #{fs.echo(pet.description)}
            li Description: #{pet.description}
            if pet.isFound
              li Date Found: #{pet.date}
            else 
              li Date Lost: #{pet.date}
            li User: #{pet.username}
            //- li Contact Info: #{fs.echo(pet.contact)}
            li Contact Info: #{pet.contact}
            
      
