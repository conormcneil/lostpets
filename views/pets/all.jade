extends ../layout

block content
  div.top 
    h1 All Pets (Lost and Found)
  div.sidebar 
    p
    a(href="/pets/browselost") Lost Pets 
    p
    a(href="/pets/browsefound") Found Pets 
    p
    p Show Me:
    p
      a(href="/pets/all/dogs") Dogs 
      p
      a(href="/pets/all/cats") Cats
      p 
      a(href="/pets/all/other") Other 
  div.main 
    
    table.pets 
      each pet in petsAndUsers 
        tr
          td
            ul
              img(src='#{pet.image}' style="height: 200px; width: 200px;")
              if pet.isFound 
                li 
                  strong FOUND 
              else 
                li 
                  strong LOST
              li 
                strong Name: 
                | #{fs.echo(pet.name)}
              if pet.age 
                li 
                  strong Age: 
                  | #{pet.age}
              if pet.isFound
                li 
                  strong Location: 
                  | #{fs.echo(pet.location)}
              else 
                li 
                  strong Last Known Location: 
                  | #{fs.echo(pet.location)}
              li 
                strong Description: 
                | #{fs.echo(pet.description)}
              if pet.date 
                if pet.isFound
                  li 
                    strong Date Found: 
                    | #{func.call(pet.date)}
                else 
                  li 
                    strong Date Lost: 
                    | #{func.call(pet.date)}
              else 
                li 
                  strong No date available 
              li 
                strong User: 
                | #{pet.username}
              li 
                strong Contact Info: 
                | #{fs.echo(pet.contact)}

      
