extends ../layout

block content
  div.top 
    h1 Lost Pets 
  div.sidebar 
    a(href="/pets/all") All Pets 
    p
    a(href="/pets/browsefound") Found Pets 
    p
    p Show Me:
    p
      a(href="/pets/browselost/dogs") Dogs 
      p
      a(href="/pets/browselost/cats") Cats
      p 
      a(href="/pets/browselost/other") Other 
    h4= error 
    p
  div.main 
    table.pets 
      each pet in petsAndUsers 
        tr
          td
            ul
              img(src='#{pet.image}' style="height: 200px; width: 200px;")
              li 
                strong LOST 
              li 
                strong Name: 
                | #{fs.echo(pet.name)}
              if pet.age 
                li 
                  strong Age: 
                  | #{pet.age}
              li 
                strong Last Known Location: 
                | #{fs.echo(pet.location)}
              li 
                strong Description: 
                | #{fs.echo(pet.description)}
              if pet.date 
                li 
                  strong Date Lost: 
                  | #{func.call(pet.date)}
              else 
                li 
                  strong No date available 
              li 
                strong User: 
                | #{pet.username}
              li 
                strong Contact Info: 
                | #{fs.echo(pet.contact)}
              li 
                a(href="/")
                  button#found I found this pet!
